$fz = 14px
$bg_color=#f4f4f5
$text_color=blue
border-radius(num)
    -webkit-border-radius num 
    -moz-boder-radius num 
    -moz-boder-radius num 
    -o-boder-radius num 

html
    font-size $fz
    font-family -apple-system  sans-serif
    text-rendering optimizeLegibility
    color $text_color
body
    font-size $fz
    background-color:  $bg_color
    margin 0
    overflow-y scroll
    -webkit-overflow-scrolling touch
a.button
    border-radius(50%)

.book-card
    min-width 720px
    width 100%
    margin 0 auto 12px
    position relative
    box-shadow 0 1px 2px 0 rgba(0,0,0,.15)
    background-color #ffffff